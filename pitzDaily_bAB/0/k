FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0.375;

boundaryField
{
    plasmaInlet
    {
//	type		cyclic;
        type            zeroGradient;
    }
    plasmaOutlet
    {
//	type		cyclic;
        type            zeroGradient;
    }
    upperWall
    {
        type            kqRWallFunction;
        value           uniform 0.375;
    }
    lowerWall
    {
        type            slip;
    }
    frontAndBack
    {
        type            empty;
    }

    inlet
    {
        type            fixedValue;
        value           uniform 0.375;
    }

    upperWall_upstream
    {
        type            kqRWallFunction;
        value           uniform 0.375;
    }

    lowerWall_upstream
    {
        type            slip;
    }

    frontAndBack_upstream
    {
        type            empty;
    }

    upperWall_downstream
    {
        type            kqRWallFunction;
        value           uniform 0.375;
    }

    lowerWall_downstream
    {
        type            slip;
    }

    frontAndBack_downstream
    {
        type            empty;
    }

    outlet
    {
        type            zeroGradient;
    }
}


